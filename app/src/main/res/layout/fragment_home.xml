<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A1DDD4">

    <ImageView
        android:id="@+id/homePhysicsButton"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="175dp"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/physics" />

    <ImageView
        android:id="@+id/homeChemistryButton"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="48dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/homePhysicsButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chem" />

    <ImageView
        android:id="@+id/homeBiologyButton"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginStart="138dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="138dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homePhysicsButton"
        app:srcCompat="@drawable/biology" />

    <TextView
        android:id="@+id/homePhysicsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:text="Physics"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/homeBiologyButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homePhysicsButton" />

    <TextView
        android:id="@+id/homeChemistryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:text="Chemistry"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/homeBiologyButton"
        app:layout_constraintTop_toBottomOf="@+id/homeChemistryButton" />

    <TextView
        android:id="@+id/homeBiologyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginEnd="168dp"
        android:text="Biology"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeBiologyButton" />

</androidx.constraintlayout.widget.ConstraintLayout>